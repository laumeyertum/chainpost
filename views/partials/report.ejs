<a data-toggle="modal" data-target="#reportModal">
    <img src="/images/icons/warning.svg" align="right" style="height: 16px;">
</a>

<div class="modal fade" id="reportModal" tabindex="-1" role="dialog" aria-labelledby="reportModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reportModalLabel">Report this post</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Please insert the post ID of the original post below. The post ID can be found under the tile of a post.</p>
                <input id="proofID" type="number" value="">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button onclick="report(this)" type="button" class="btn btn-primary">Report</button>
            </div>
        </div>
    </div>
</div>
<script src="./javascripts/report.js"></script>
